					"trustServerCertificate": false,
					"authenticationType": "SQL",
					"userName": "[parameters('LS_storepro_properties_typeProperties_userName')]",
					"password": {
						"type": "SecureString",
						"value": "[parameters('LS_storepro_password')]"
